@model List<E_commerce_Project.Models.Product>
@if (Model.Any())
{
    <section class="home-prodacts">
        <div class="container">
            <div class="prodacts-tabs">
                <div class="home-prodacts-title">
                    <h5 class="m-0">Prodacts</h5>
                </div>
                <ul class="nav nav-tabs justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#best-seller">
                            <i class="fab fa-gratipay"></i> Best Seller
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#mostviewed">
                            <i class="far fa-eye"></i> Mostviewed
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content py-5">
                <div id="best-seller" class="tab-pane container ">
                    <div class="best-seller owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {
                            <div class="item  p-0">
                                <figure class="prodact">
                                    <div class="prodact-img">
                                        <img src="@item.Image" alt="" class="img-fluid">
                                    </div>
                                    <figcaption class="p-2 py-3">
                                        <div class="prodact-name">
                                            <h5 class=" m-0">@item.Name</h5>
                                        </div>
                                        <!-- prodact-price -->
                                        <div class="prodact-price">
                                            <p class="m-0">$@item.Price</p>
                                        </div>
                                        <!-- prodact-action -->
                                        <div class="prodact-action justify-content-end">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <a href="/ProductDetailes/index/@item.ID">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                            </span>
                                            <span data-toggle="tooltip" title="Add To Cart">
                                                <i class="fas fa-shopping-cart ico" onclick="addToCart(@item.ID,1)"></i>
                                            </span>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        }
                    </div>
                </div>
                <div id="mostviewed" class="tab-pane container">
                    <div class="mostviewed owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {
                            <div class="item  p-0">
                                <figure class="prodact">
                                    <div class="prodact-img">
                                        <img src="@item.Image" alt="" class="img-fluid">
                                    </div>
                                    <figcaption class="p-2 py-3">
                                        <div class="prodact-name">
                                            <h5 class=" m-0">@item.Name</h5>
                                        </div>
                                        <!-- prodact-price -->
                                        <div class="prodact-price">
                                            <p class="m-0">@item.Price</p>
                                        </div>
                                        <div class="prodact-action justify-content-end">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <a href="/ProductDetailes/index/@item.ID">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                            </span>
                                            <span data-toggle="tooltip" title="Add To Cart">
                                                <i class="fas fa-shopping-cart ico" onclick="addToCart(@item.ID,1)"></i>
                                            </span>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}
