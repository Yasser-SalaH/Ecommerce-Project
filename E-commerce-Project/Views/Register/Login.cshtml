@model E_commerce_Project.ViewModel.UserVM
    <label>Login</label>
<div>
    @using (Ajax.BeginForm("login", "Register",
        new AjaxOptions { OnSuccess = "onsuccess", OnFailure = "onfailure" }))
    {
        <div>
            @Html.LabelFor(z => z.Email)
            @Html.TextBoxFor(z => z.Email, new { palceholder="Enter Email",@class="form-control"})
            @Html.ValidationMessageFor(z=>z.Email)
        </div>
        <div>
            @Html.LabelFor(z => z.Password)
            @Html.TextBoxFor(z => z.Password, new {Type="Password", palceholder = "Enter Password", @class = "form-control" })
            @Html.ValidationMessageFor(z => z.Password)
        </div>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="remember" style="
                      padding: 10px 25px">
            <label class="custom-control-label" for="remember">Remember Me</label>
        </div>
        <div>
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    }
</div>
