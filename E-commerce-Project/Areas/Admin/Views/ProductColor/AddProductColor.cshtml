@model E_commerce_Project.ViewModel.ProductColorVM
<div class="col-md-12">
    @using (Ajax.BeginForm("PostProductColor",
        new AjaxOptions { OnSuccess = "onsuccess", OnFailure = "onfailure" }))
    {
        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label">Image</label>
            @Html.TextBoxFor(z => z.Image, new { @class = "form-control" })
            @Html.ValidationMessageFor(z => z.Image)
        </div>
        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label">ProductName</label>
            @Html.DropDownListFor(z => z.ProductFK, new SelectList(new E_commerce_Project.DAL.ProductColorDAL().GetAll(),"ID","Name"),new { @class = "form-control" })
            @Html.ValidationMessageFor(z => z.ColorFk)
        </div>
        <div class="form-group col-md-4 col-sm-4 col-xs-12">
            <label class="control-label">Color Name</label>
            @Html.DropDownListFor(z => z.ColorFk, new SelectList(new E_commerce_Project.DAL.ProductColorDAL().GetAll(),"ID","Name"),new { @class = "form-control" } )
            @Html.ValidationMessageFor(z => z.ColorFk)
        </div>
        <button type="submit" class="btn btn-success">save</button>
    }

</div>
